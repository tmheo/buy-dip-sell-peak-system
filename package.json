{
  "name": "buy-dip-sell-peak-system",
  "version": "1.0.0",
  "description": "SOXL ETF 떨사오팔 Pro 투자 전략 백테스트 및 매매표 생성 시스템",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "init": "tsx src/index.ts init",
    "update": "tsx src/index.ts update",
    "query": "tsx src/index.ts query",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "prepare": "husky",
    "web:dev": "next dev",
    "web:build": "next build",
    "web:start": "next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "precompute": "tsx scripts/precompute-recommendations.ts",
    "export:architecture": "npx @vraksha/excalidraw-cli docs/architecture/system-architecture.excalidraw docs/architecture/system-architecture.png --format png"
  },
  "keywords": [
    "soxl",
    "etf",
    "trading",
    "backtest",
    "yahoo-finance"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "decimal.js": "^10.6.0",
    "next": "^15.1.0",
    "next-auth": "^5.0.0-beta.30",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^3.6.0",
    "yahoo-finance2": "^3.11.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.8.0",
    "sharp": "^0.34.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
